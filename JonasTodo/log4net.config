<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="logs/JonasTodo.log" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <datePattern value="-yyyy-MM-dd" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="true" />
    <preserveLogFileNameExtension value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
  </appender>
  
  <appender name="EntityFrameworkAppender" type="log4net.Appender.RollingFileAppender">
    <file value="logs/JonasTodo.EntityFramework.log" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <datePattern value="-yyyy-MM-dd" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="true" />
    <preserveLogFileNameExtension value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
  </appender>
  
  <root>
    <level value="INFO" />
    <appender-ref ref="RollingFileAppender" />
  </root>
  
  <!-- EntityFramework logs to separate file -->
  <logger name="Microsoft.EntityFrameworkCore" additivity="false">
    <level value="WARN" />
    <appender-ref ref="EntityFrameworkAppender" />
  </logger>
  
  <logger name="Microsoft.EntityFrameworkCore.Database.Command" additivity="false">
    <level value="WARN" />
    <appender-ref ref="EntityFrameworkAppender" />
  </logger>
  
  <logger name="Microsoft.EntityFrameworkCore.Infrastructure" additivity="false">
    <level value="WARN" />
    <appender-ref ref="EntityFrameworkAppender" />
  </logger>
</log4net>
